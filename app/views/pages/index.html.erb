<% if user_signed_in? %>
  <div class="row">
    <div class="col-xs-12 col-md-8 pull-right">
      <form role="form">
        <div class="form-group">
          <textarea class="form-control" rows="2"></textarea>
        </div>
        <div class="pull-right">
          <button class="btn btn-primary">Submit</button>
        </div>
        <div class="clearfix"></div>
      </form>
    </div>
    <div class="col-xs-12 col-md-4">
      <h4>Following tags</h4>
      <ul class="list-group">
        <li class="list-group-item">Tag1</li>
        <li class="list-group-item">Tag2</li>
        <li class="list-group-item">Tag3</li>
        <li class="list-group-item">Tag4</li>
        <li class="list-group-item">Tag5</li>
      </ul>
    </div>
  </div>
<% else %>
  <div class="jumbotron">
    <div class="container">
      <h1>Whereabouts of another.</h1>
      <p>Anoside is a microblogging service that enables its users to send posts anonymously.</p>
      <p>
        <%= link_to 'Signup', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
      </p>
    </div>
  </div>
<% end %>

