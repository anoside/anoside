- content_for(:site_page_title, t('user_tags.index.page_title'))

div ng-controller='Anoside.UserTagsCtrl'
  ul.tags
    li ng-repeat='tag in tags'
      a ng-href='/tags/{{tag.name}}'
        .name.pull-left
          | {{tag.name}}
        .pull-right
          i.icon-chevron-right
        .clearfix

      hr
