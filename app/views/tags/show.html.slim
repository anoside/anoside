.tag ng-controller='Anoside.TagCtrl' data-tag-name='<%= params[:id] %>'
  .header
    .pull-left
      h1
        | {{tag.name}}
    .pull-right
      button.btn type='button' ng-class="{'btn-primary': !tag.followed, 'btn-success': tag.followed}" ng-click='toggleFollow()' {{tag.followed ? 'Following' : 'Follow'}}
    .clearfix

  hr

  .posts ng-controller='Anoside.TagPostsCtrl'
    div ng-repeat='post in posts'
      = render 'posts/post'
