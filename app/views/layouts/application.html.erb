<!DOCTYPE html>
<html lang="en-us" ng-app="anoside">
  <head>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <title>Anoside</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body class="<%= body_class %>">
    <nav class="navbar navbar-default" role="navigation">
      <div class="navbar-header">
        <%= link_to 'Anoside', root_path, class: 'navbar-brand' %>
      </div>
    </nav>

    <div class="wrapper">
      <nav class="menu">
        <ul>
          <li>
            <%= link_to root_path do %>
              <i class="icon-home"></i>
            <% end %>
          </li>
          <li>
            <%= link_to user_tags_path do %>
              <i class="icon-tags"></i>
            <% end %>
          </li>
          <li>
            <%= link_to '#' do %>
              <i class="icon-thumbs-up"></i>
            <% end %>
          </li>
          <li>
            <%= link_to '#' do %>
              <i class="icon-thumbs-down"></i>
            <% end %>
          </li>
          <li>
            <%= link_to '#' do %>
              <i class="icon-user"></i>
            <% end %>
          </li>
          <li>
            <%= link_to '#' do %>
              <i class="icon-gear"></i>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: 'delete' do %>
              <i class="icon-power-off"></i>
            <% end %>
          </li>
        </ul>
      </nav>

      <article class="col-sm-10 col-xs-9">
        <%= yield %>
      </article>
    </div>

    <div class="clearfix"></div>

    <footer>
      <hr>
      <p class="text-center">
        Â© 2013 Anoside
      </p>
    </footer>
  </body>
</html>
