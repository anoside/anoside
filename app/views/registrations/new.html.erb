<h2>Sign up</h2>

<%= form_for resource, as: resource_name, url: registration_path(resource_name), class: 'form-inline', role: 'form' do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <div class="col-lg-3">
      <label class="sr-only" for="username">Username</label>
      <%= f.text_field :username, id: 'username', class: 'form-control', placeholder: 'Username', autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-3">
      <label class="sr-only" for="password">Username</label>
      <%= f.password_field :password, id: 'password', class: 'form-control', placeholder: 'Password' %>
    </div>
  </div>
  <%= hidden_field_tag 'user[accept_language_id]', session[:accept_language_id] %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
