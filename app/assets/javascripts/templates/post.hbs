<div class="post">
  {{{simpleFormat body}}}
  <div class="footer">
    <div class="top">
      <span class="date">{{timeAgoInWords created_at}}</span>
      {{#ifIsUserSignedIn}}
        <span class="delete">
          <i class="icon-trash fake-link"></i>
        </span>
      {{/ifIsUserSignedIn}}
    </div>
    <div class="bottom">
      <div class="tags">
        <ul>
          <li>
            {{tag.name}}
          </li>
        </ul>
        {{#ifIsUserSignedIn}}
          <span class="tag-addition-button.fake-link">
            Add tag
          </span>
          <form>
            <div class="input">
              <input id="post_tag_list" type="text">
            <div class="form-actions">
              <button class="btn">
                Save
              </button>
            </div>
          </form>
        {{/ifIsUserSignedIn}}
      </div>
    </div>
  </div>
</div>

<ul class="comments"></ul>

<form class="new-comment">
  <textarea class="comment-body"></textarea>
  <button>Reply</button>
</form>
